{
  "rules": {
    "posts": {
      ".read": "auth != null",
 		  ".write": "auth != null",
      "$retroId": {
        ".indexOn": ["date", "starCount"]
      }
    },
    "retros": {
      ".read": "auth != null",
 		  ".write": "auth != null"
    },
    "user-posts": {
      ".read": "auth != null",
 		  ".write": "auth != null"
    },
    "user-retros": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "retro-types": {
      ".read": "auth != null",
 		  ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}
